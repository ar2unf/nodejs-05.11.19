<form method='POST' action='/news'>
    <input list='news' type='text' name='name' placeholder='Новостной источник'/>
    <datalist id='news'>
        <option value='hitech' />
        <option value='wek' />
        <option value='bravica' />
    </datalist>
    <input type='text' name='count' placeholder='Количество новостей' />
    <input type='submit' />
</form>

<p>{{message}}</p>

{{#if name}}
    <h3>Новостной источник: {{name}}</h3>
    <form method='GET' action='/news'>
        <input list='news' type='text' name='name' value='{{name}}' />
        <input type='submit' value='Показать новости' />
    </form>
{{/if}}

<ul>
    {{#each data}}
        <h3>{{this.title}}</h3>
        <p>{{this.text}}</p>
    {{/each}}
</ul>

        
